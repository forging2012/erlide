<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
     <extension
         id="erlnature"
         name="Erlang Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.erlide.core.internal.builder.ErlangNature">
         </run>
      </runtime>
      <builder id="org.erlide.core.erlbuilder"/>
   </extension>
   <extension
         id="erlbuilder"
         name="Erlang builder"
         point="org.eclipse.core.resources.builders">
      <builder >
         <run
               class="org.erlide.core.internal.builder.InternalBuilderRebar">
         </run>
      </builder>
   </extension>
   <extension
         id="rebar.builder"
         name="Erlang builder"
         point="org.eclipse.core.resources.builders">
      <builder >
         <run
               class="org.erlide.core.internal.builder.external.RebarBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="make.builder"
         name="Erlang builder"
         point="org.eclipse.core.resources.builders">
      <builder >
         <run
               class="org.erlide.core.internal.builder.external.MakeBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="emake.builder"
         name="Erlang builder"
         point="org.eclipse.core.resources.builders">
      <builder >
         <run
               class="org.erlide.core.internal.builder.external.EmakeBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="problemmarker"
         name="Erlang Problems"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
      <super type="org.eclipse.core.resources.textmarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         id="taskmarker"
         name="Erlang task"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.taskmarker"/>
      <persistent value="true"/>
   </extension>
  <extension
        id="erlang.lineBreakpoint.marker"
        name="Erlang Line Breakpoint"
        point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.debug.core.breakpointMarker"/>
      <persistent value="true"/>
   </extension>
</plugin>
